<div class = "signup">
<center><h1>Login</h1></center>
<br>

<div class="container">
  <%= form_tag '/login' do %>
  <div class="form-group">
      <label for="Email", class="col-sm-1 col-md-offset-4 control-label">Email</label>
      <div class="col-sm-4">
  <%= text_field_tag :email, "", class: "form-control" %>
  </div>
  </div>
  <div class="form-group">
      <label for="Password", class="col-sm-1 col-md-offset-4 control-label">Password</label>
      <div class="col-sm-4">
  <%= password_field_tag :password, "", class:"form-control" %>
  </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-8 col-sm-10">
    <%= submit_tag "Submit", class:"btn btn-default" %>
  </div>
  </div>
  </div>

  <% end %>
</div>

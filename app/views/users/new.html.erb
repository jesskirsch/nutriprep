<div class = "signup">
<center><h1>Signup!</h1></center>
<br>
  <div class="container">
    <%= form_for :user, url: '/users' do |f| %>
    <div class="form-group row">
      <label for="name", class="col-sm-1 col-md-offset-2 control-label">Name</label>
      <div class="col-sm-6">
        <%= f.text_field :name, class: "form-control" %>
      </div>
    </div>
    <div class="form-group row">
      <label for="email", class="col-sm-1 col-md-offset-2 control-label">Email</label>
      <div class="col-sm-6">
        <%= f.text_field :email, class: "form-control" %>
      </div>
    </div>
    <div class="form-group row">
      <label for="password", class="col-sm-1 col-md-offset-2 control-label">Password</label>
      <div class="col-sm-6">
        <%= f.password_field :password, class: "form-control" %>
      </div>
    </div>
    <div class="form-group row">
      <label for="password_confirmation", class="col-sm-1  col-md-offset-2 control-label">Confirmation</label>
      <div class="col-sm-6">
        <%= f.password_field :password_confirmation, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-8 col-sm-2">
        <%= f.submit "Submit", class: "btn btn-default" %>
      </div>
    </div>
  </div>
</div>
<% end %>

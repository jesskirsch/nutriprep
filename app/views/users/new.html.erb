<h1>Signup!</h1>

<%= form_for :user, url: '/users' do |f| %>

<div class="form-group">
  <label for="Email", class="col-sm-2 control-label">Name</label>
  <div class="col-sm-10">
<%= f.text_field :name, class: "form-control", style: "width: 30%;" %>
</div>
</div>
<div class="form-group">
  <label for="Email", class="col-sm-2 control-label">Email</label>
  <div class="col-sm-10">
<%= f.text_field :email, class: "form-control", style: "width: 30%;" %>
</div>
</div>
<div class="form-group">
  <label for="Email", class="col-sm-2 control-label">Password</label>
  <div class="col-sm-10">
<%= f.password_field :password, class: "form-control", style: "width: 30%;" %>
</div>
</div>
<div class="form-group">
  <label for="Email", class="col-sm-2 control-label">Password Confirmation</label>
  <div class="col-sm-10">
<%= f.password_field :password_confirmation, class: "form-control", style: "width: 30%;" %>
</div>
</div>
<div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
  <%= f.submit "Submit", class: "btn btn-default" %>
</div>
</div>
<% end %>

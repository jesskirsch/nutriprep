
<%= form_for @biometric do |f| %>

  <% if @biometric.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@biometric.errors.count, "error") %> prohibited
        these biometrics from being saved:
      </h2>
      <ul>
        <% @biometric.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <fieldset class="form-inline row">
      <legend class="col-sm-2">Gender</legend>
      <div class="form-check col-sm-3">
        <label class="form-check-label">
          <input type="radio" class="form-check-input" name="optionsRadios" id="gender_male" value="male" checked>Male</label>
      </div>
      <div class="form-check col-sm-3">
      <label class="form-check-label">
          <input type="radio" class="form-check-input" name="optionsRadios" id="gender_female" value="female">Female</label>
      </div>
  </fieldset>
  <div class="form-group row">
    <label for="height" class="col-sm-2 col-form-label col-form-label-lg">Height:</label>
    <div class="col-sm-2">
      <input type="range" id="height" name="height" min="38" max="95">
    </div>
  </div>
  <div class="form-group row">
    <label for="waist_size" class="col-sm-2 col-form-label col-form-label">Waist Size</label>
    <div class="col-sm-2">
      <input type="number" class="form-control form-control-lg" id="waist_size" placeholder="in inches.">
    </div>

    <label for="neck_size" class="col-sm-2 col-form-label col-form-label">Neck Size</label>
    <div class="col-sm-2">
      <input type="number" class="form-control form-control-lg" id="neck_size" placeholder="in inches.">
    </div>

    <label for="hip_size" class="col-sm-2 col-form-label col-form-label">Hip Size</label>
    <div class="col-sm-2">
      <input type="number" class="form-control form-control-lg" id="hip_size" placeholder="in inches.">
    </div>
  </div>


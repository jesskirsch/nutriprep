
<%= form_for @biometric do |f| %>

  <% if @biometric.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@biometric.errors.count, "error") %> prohibited
        these biometrics from being saved:
      </h2>
      <ul>
        <% @biometric.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">


    <!-- Wrapper for slides -->
    <div class="carousel-inner center_div" role="listbox">
      <div class="item active">

          <div class="form-group">
            <label for="Gender", class="col-sm-2 col-sm-offset-3 control-label">Gender</label>
            <div class="col-sm-7">
          <%= f.text_field :gender, class: "form-control", style: "width: 30%;" %>
          </div>
        </div>

        <div class="form-group">
          <label for="Height", class="col-sm-2 col-sm-offset-3 control-label">Height</label>
          <div class="col-sm-7">
        <%= f.text_field :height, class: "form-control", style: "width: 30%;" %>
        </div>
      </div>

        <div class="form-group">
          <label for="Current_Weight", class="col-sm-2 col-sm-offset-3 control-label">Current Weight</label>
          <div class="col-sm-7">
        <%= f.text_field :current_weight, class: "form-control", style: "width: 30%;" %>
        </div>
      </div>

        <div class="form-group">
          <label for="Goal_weight", class="col-sm-2 col-sm-offset-3 control-label">Goal Weight</label>
          <div class="col-sm-7">
        <%= f.text_field :goal_weight, class: "form-control", style: "width: 30%;" %>
        </div>
      </div>

        <div class="form-group">
          <label for="Waist_size", class="col-sm-2 col-sm-offset-3 control-label">Waist Size</label>
          <div class="col-sm-7">
        <%= f.text_field :waist_size, class: "form-control", style: "width: 30%;" %>
        </div>
      </div>
      </div>


    <!-- second half of form   -->
      <div class="item">
        <div class="form-group">
          <label for="Activity", class="col-sm-2 col-sm-offset-3 control-label">Activity</label>
          <div class="col-sm-7">
        <%= f.text_field :activity, class: "form-control", style: "width: 30%;" %>
        </div>
      </div>

      <div class="form-group">
        <label for="Body_type", class="col-sm-2 col-sm-offset-3 control-label">Body Type</label>
        <div class="col-sm-7">
      <%= f.text_field :body_type, class: "form-control", style: "width: 30%;" %>
      </div>
    </div>


      <div class="form-group">
        <label for="Goal", class="col-sm-2 col-sm-offset-3 control-label">Goal</label>
        <div class="col-sm-7">
      <%= f.text_field :goal, class: "form-control", style: "width: 30%;" %>
      </div>
    </div>

      <div class="form-group">
        <label for="Diet", class="col-sm-2 col-sm-offset-3 control-label">Diet</label>
        <div class="col-sm-7">
      <%= f.text_field :diet, class: "form-control", style: "width: 30%;" %>
      </div>
    </div>


          <div class="form-group">
              <div class="col-sm-offset-5 col-sm-5">
            <%= f.submit "Submit", class: "btn btn-default" %>
          </div>
        </div>

      </div>
    </div>

    <!-- Controls -->
    <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
      <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
      <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>

<% end %>

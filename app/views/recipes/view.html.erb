<div class=container-fluid id="header">
  <div class="row">
    <div class="col-md-6 col-md-offset-3" id="header_text">
      <h2><center>Recipes For Your Diet</center></h2>
    </div>
  </div>
</div>
<br><br>

<div class=container-fluid>
  <div class="row">
    <div class="col-md-4 col-md-offset-1">
      <h4>Name</h4>
    </div>
    <div class="col-md-1">
      <h4>Meal</h4>
    </div>
    <div class="col-md-1">
      <h4>Protein</h4>
    </div>
    <div class="col-md-1">
      <h4>Fat</h4>
    </div>
    <div class="col-md-2">
      <h4>Carbohydrates</h4>
    </div>
    <div class="col-md-1">
      <h4>Calories</h4>
    </div>
  </div>
</div>


<div class=container-fluid>
  <div class="row">
    <div class="col-md-4 col-md-offset-1">
      <% @chosen_recipe.each do |recipe| %>
        <h5><%= link_to recipe[:name], recipe_path(recipe) %></h5>
        <% end %>
    </div>
    <div class="col-md-1">
      <% @chosen_recipe.each do |recipe| %>
        <h5><%= recipe[:category] %></h5>
        <% end %>
    </div>
    <div class="col-md-1">
      <% @chosen_recipe.each do |recipe| %>
        <h5><%= recipe[:protein] %></h5>
        <% end %>
    </div>
    <div class="col-md-1">
      <% @chosen_recipe.each do |recipe| %>
        <h5><%= recipe[:fat] %></h5>
        <% end %>
    </div>
    <div class="col-md-2 ">
      <% @chosen_recipe.each do |recipe| %>
        <h5><%= recipe[:carbohydrate] %></h5>
        <% end %>
    </div>
    <div class="col-md-1">
      <% @chosen_recipe.each do |recipe| %>
        <h5><%= recipe[:calories] %></h5>
        <% end %>
    </div>
  </div>
</div>

<br>
<br>
<div class=container-fluid>
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <h5><center><%= link_to 'Back To Nutrition Plan', recipes_path, class:"btn btn-default new_button" %></center></h5>
    </div>
  </div>
</div>

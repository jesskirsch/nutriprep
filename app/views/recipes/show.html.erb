
<div class=container-fluid id="recipe_header">
  <div class="row">
    <div class="col-md-8 col-md-offset-2" id="recipe_text">
      <h1 id="title_text"><center><%= @recipe.name %></center></h1>
    </div>
  </div>
</div>
<br>
<div class=container-fluid>
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <center><h3>Ingredients</h3></center>
    </div>
  </div>
</div>
<div class=container-fluid>
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <% @foods.each do |food| %>
      <center><%= food.name %></center>
      <% end %>
    </div>
  </div>
</div>
<br>
<div class=container-fluid>
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <center><h3>Instructions</h3></center>
    </div>
  </div>
</div>
<div class=container-fluid>
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <center><%= @recipe.instructions %></center>
    </div>
  </div>
</div>
<br>
<br>
<div class=container-fluid>
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <h5><center><%= link_to 'Back to Nutrition Plan', recipes_path, class:"btn btn-default new_button" %></center></h5>
    </div>
  </div>
</div>
